---
const { content } = Astro.props;
---

<div class="card-box">
  <div class="card">
    <div class="title">
      <p>性格</p>
    </div>
    <div class="text">
      <p>{content}</p>
    </div>
  </div>
  <div class="card-shadow"></div>
</div>

<style>
  .card-box {
    animation: slideInIdentity 1.0s ease-out;
    rotate: -2deg;
  }

  .card {
    position: relative;
    width: 100%;
    background-color: #C4D4F2;
    background: linear-gradient(260deg, #C4D4F2 65%, #A0B3E6 100%);
    /* background-color: #eee; */

    padding: 5% 8%;
  }

  @keyframes slideInIdentity {
    0% {
      opacity: 0;
      transform: translateY(-100%) translateX(-20%);
    }
    100% {
      opacity: 1;
      transform: translateY(0) translateX(0);
    }
    
  }

  .title p {
    font-size: 2rem;
  }

  .text p {
    font-size: 4rem;
    text-align: center;
  }

  .card-shadow {
    position: relative;
    width: 100%;
    height: 1px;
  }

  .card-shadow:before, .card-shadow:after
  {
    z-index: -1;
    position: absolute;
    content: "";
    top: 0px;
    left: 10px;
    width: 40%;
    height: 1px;
    max-width:300px;
    box-shadow: 0 15px 10px #777;
    transform: translateY(-16px) rotate(-3deg);
  }

  @media screen and (max-width: 600px) {
    .card-box {
      width: 100%;
      height: 100%;
      padding: 0 20px;
    }

    .card {
      padding: 5% 5%;
    }

    .title p {
      font-size: 1.5rem;
    }

    .text p {
      font-size: 2.5rem;
    }
  }
</style>