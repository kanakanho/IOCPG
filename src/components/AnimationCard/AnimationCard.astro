  function getRandom(arr) {
    return arr[Math.floor(Math.random() * arr.length)];
  }
  function updateCard(cardId, arr) {
    const box = document.getElementById(cardId);
    if (!box) return;
    const p = box.querySelector(".text p");
    if (!p) return;
    box.classList.remove("animate");
    void box.offsetWidth;
    box.classList.add("animate");
    p.textContent = getRandom(arr);
  }
  let toggle = true;
  setInterval(() => {
    if (toggle) {
      updateCard("personality-card-box", personalityList);
    } else {
      updateCard("character-card-box", characterList);
    }
    toggle = !toggle;
  }, 2500);
</script>